<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="javiersevball.ekawake.MainActivity">

    <TextView
        android:id="@+id/textViewMacAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="true"
        android:labelFor="@+id/editTextMacAddress"
        android:text="@string/tview_macAddress"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextMacAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewMacAddress"
        android:inputType="textNoSuggestions"
        android:text="@string/etext_defaultMac" />

    <TextView
        android:id="@+id/textViewNumberOfPackets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/editTextMacAddress"
        android:labelFor="@+id/editTextNumberOfPackets"
        android:text="@string/tview_numberOfPackets"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextNumberOfPackets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNumberOfPackets"
        android:inputType="number"
        android:text="@string/etext_defaultNumOfPackets" />

    <Button
        android:id="@+id/sendPacketsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextNumberOfPackets"
        android:onClick="sendButtonClicked"
        android:text="@string/button_send" />

    <ProgressBar
        android:id="@+id/sendingProgressBar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sendPacketsButton"
        android:layout_marginTop="20dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/sendingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sendingProgressBar"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/sendingProgressBar"
        android:labelFor="@+id/sendingProgressBar"
        android:text="@string/tview_sendingPackets"
        android:textSize="14sp"
        android:visibility="invisible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/info"
        android:textSize="14sp" />

</RelativeLayout>
